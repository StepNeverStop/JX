
@{
    Layout = null;
    ViewBag.Title = "登陆";
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>登陆</title>
    <link rel="stylesheet" type="text/css" href="~/Content/模板.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/login.css" />
</head>
<body>
    <div class="content">
        <div class="login_title">
            <img class="login_logo" src="~/Images/logo.png" alt="军师网">
            <img class="login_pic1" src="~/Images/login.jpg" alt="注册装饰图片">
        </div>
        <div class="login">
            <div class="login_header">
                <p>账号密码登陆</p>
            </div>
            <form class="login_form" action="/Account/Login" method="post">
                <input type="text" name="user" id="username" placeholder="用户名" />
                <input type="password" name="pwd" id="password" placeholder="密码" />
                <input type="submit" id="submit" value="登陆" />
                <a href="/Account/ShowRegister">注册新用户</a>
            </form>
        </div>
    </div>

    <footer>
        <p>
            Copyright © 2016.6 All Rights Reserved.
            版权所有 军师网 技术支持：军师网
        </p>
    </footer>
</body>
</html>
