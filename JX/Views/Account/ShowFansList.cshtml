    <div class="show_content">
        <h2>粉丝列表</h2>
        <p>粉丝数：@ViewBag.fanscount</p>
        <ul>
            @foreach (var item in ViewBag.fanslist)
            {
                <li><span>昵称： @item</span></li>
            }
        </ul>
    </div>
</div>