
@{
    ViewBag.Title = "ShowAttendList";
}
@section CSS
{
    <link rel="stylesheet" type="text/css" href="~/Content/guanzhulist.css" />
    }
<div class="user_content">
    <div class="sidebar">
        <p class="sidebar_title">个人书屋向导</p>
        <ul>
            <li><a href="/Account/ShowPersonInfo">个人信息</a></li>
            <li><a href="/Account/ShowChangePwd">修改密码</a></li>
            <li><a href="/Account/ShowAttendList">关注列表</a></li>
            <li><a href="/Account/ShowFansList">粉丝列表</a></li>
        </ul>
    </div>




    <div class="show_content">
        <h2>关注列表</h2>
        <p>关注数：@ViewBag.attendcount</p>
        <ul>
            @foreach (var item in ViewBag.attendlist)
            {
                <li><span>昵称： @item</span></li>
            }
        </ul>
    </div>
</div>
