@using JX.Models
@{
    ViewBag.Title = "ShowWeixiaoshuoList";
}

@section CSS
{
    <link rel="stylesheet" type="text/css" href="~/Content/weixiaoshuo.css" />
    }
<div class="projects">
    @foreach (var item in ViewBag.weixiaoshuo as IEnumerable<Projects>)
    {
        <div class="project">
            <span class="project_name"><a href="project.html">@item.ProjectName</a></span>
            <span class="project_type">[微小说]</span>
            <span class="project_status">状态：@item.ProjectStates.StateName</span>
            <p class="project_intro">
                @item.ProjectIntro
            </p>
        </div>
    }

</div>